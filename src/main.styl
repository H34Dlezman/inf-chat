bg = #222
solid = #444
text = #ddd
ChatFont = "Comic Sans MS", sans-serif
chatBoxHeight = 70px

* {
  margin 0
  padding 0
  font-family "Courier New", monospace
  color text
}

body
  width 100vw
  height 100vh

#app
  width 100%
  height 100%
  
main
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  background bg
  
#MessageList
  width 100%
  height 100%
  overflow scroll
  
  *
     font-family ChatFont
  
  li
    display flex
    flex-direction column
    justify-content center
    min-height chatBoxHeight
    border-radius (chatBoxHeight / 10)
    background solid
    margin 12px
    padding 12px
    
    p
      width 100%
      text-align center

#ChatBox
  width 100%
  height 10vh
  max-height chatBoxHeight
  display flex
  flex-direction row
  
  *
    flex 1
    margin 6px
    border-radius (chatBoxHeight / 25)
    font-size 24px
    color bg

  input
    padding 12px
    border none
    font-family ChatFont
    curson grabbing
  
  button
    max-width (chatBoxHeight * 2)
    cursor all-scroll
  button:disabled,button[disabled]
    curson grabbing